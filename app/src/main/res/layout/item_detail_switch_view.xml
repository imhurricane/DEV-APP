<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp">

        <TextView
            android:id="@+id/switch_column_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="@color/dev_column_name_color"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Switch
                android:id="@+id/switch_column_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="40dp"
                android:textColor="@color/dev_column_value_color"
                android:track="@drawable/selector_track_check"
                android:thumb="@drawable/selector_thumb_check"/>
        </LinearLayout>


</LinearLayout>