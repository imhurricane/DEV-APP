<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_corner_length="20dp"
        app:inner_corner_width="3dp"
        app:inner_height="240dp"
        app:inner_margintop="100dp"
        app:inner_scan_iscircle="true"
        app:inner_scan_speed="10"
        app:inner_width="240dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/light"
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom|center_horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/open_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/shanguangdeng"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</FrameLayout>